{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.microsoft.teams.extension",
    "developer": {
        "name": "Teams App, Inc.",
        "websiteUrl": "https://www.example.com",
        "privacyUrl": "https://www.example.com/privacy",
        "termsOfUseUrl": "https://www.example.com/termsofuse"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "Robot Arm-${{TEAMSFX_ENV}}",
        "full": "Full name for Robot Arm"
    },
    "description": {
        "short": "Short description of Robot Arm",
        "full": "Full description of Robot Arm"
    },
    "accentColor": "#FFFFFF",
    "bots": [],
    "composeExtensions": [],
    "staticTabs": [
        {
            "entityId": "robotArm0",
            "name": "Robot Arm", 
            "websiteUrl": "https://bcsrobotdevuksapp.azurewebsites.net",
            "contentUrl": "https://bcsrobotdevuksapp.azurewebsites.net",
            "scopes": [
                "personal"
            ]
        }

    ],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "${{TAB_DOMAIN}}",
        "https://bcsrobotdevuksapp.azurewebsites.net"
    ],
    "showLoadingIndicator": false
}